{
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": true,
    "jsx": "react",
    "module": "es6", 
    "target": "es5", 
    "allowJs": true, 
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
        "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/"]
}